# ─────────────────────────────────────────────────────────────────────────────
# Forge — Environment Variables Template
# Copy to .env and fill in real values before running
# NEVER commit .env to version control
# ─────────────────────────────────────────────────────────────────────────────

# ── Application ───────────────────────────────────────────────────────────────
APP_NAME=Forge
DEBUG=false
SECRET_KEY=change-me-to-a-random-64-char-string
ENCRYPTION_KEY=change-me-to-a-random-32-char-key

# ── Server ────────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=*

# ── Database (PostgreSQL) ─────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://forge:forge_password@localhost:5432/forge_db
DATABASE_URL_REPLICA=postgresql+asyncpg://forge:forge_password@localhost:5432/forge_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ── Redis ─────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
CACHE_TTL=300

# ── Kafka ─────────────────────────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PIPELINE_EVENTS=pipeline-events
KAFKA_TOPIC_AGENT_TASKS=agent-tasks
KAFKA_TOPIC_NOTIFICATIONS=notifications
KAFKA_CONSUMER_GROUP=forge-workers

# ── Authentication ────────────────────────────────────────────────────────────
JWT_SECRET_KEY=change-me-to-a-random-64-char-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# ── AI / Anthropic ────────────────────────────────────────────────────────────
# Get your key at https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-...
AGENT_MODEL=claude-opus-4-6
AGENT_MAX_TOKENS=8192
AGENT_TIMEOUT_SECONDS=300

# ── Rate Limiting ─────────────────────────────────────────────────────────────
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ── Notifications — Slack (optional) ─────────────────────────────────────────
# SLACK_BOT_TOKEN=xoxb-...
# SLACK_CHANNEL_APPROVALS=#approvals

# ── Notifications — Email (optional) ─────────────────────────────────────────
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=SG.xxx
# EMAIL_FROM=forge@company.com

# ── Monitoring ────────────────────────────────────────────────────────────────
PROMETHEUS_ENABLED=true
# JAEGER_HOST=localhost

# ── Feature Flags ─────────────────────────────────────────────────────────────
FEATURE_DEPLOYMENT_ENABLED=true
FEATURE_SECURITY_SCAN_ENABLED=true
FEATURE_COST_ESTIMATION_ENABLED=true
