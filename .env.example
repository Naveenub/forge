# ─────────────────────────────────────────────────────────────────────────────
# Forge — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ─────────────────────────────────────────────────────────────────────────────

# ── Anthropic ──────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
ANTHROPIC_MODEL=claude-opus-4-6
ANTHROPIC_MAX_TOKENS=8192
ANTHROPIC_TIMEOUT_SECONDS=300

# ── Application ────────────────────────────────────────────────────────────
APP_ENV=development          # development | staging | production
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO               # DEBUG | INFO | WARNING | ERROR

# ── Database (PostgreSQL) ──────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://forge:secret@localhost:5432/forge
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
POSTGRES_USER=forge
POSTGRES_PASSWORD=secret
POSTGRES_DB=forge

# ── Cache (Redis) ──────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ── Message Queue (Kafka) ──────────────────────────────────────────────────
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=forge-workers
KAFKA_TOPIC_PIPELINE_EVENTS=pipeline.events
KAFKA_TOPIC_AGENT_LOGS=agent.logs
KAFKA_TOPIC_APPROVALS=governance.approvals

# ── Auth & Security ────────────────────────────────────────────────────────
JWT_SECRET=change-me-to-a-long-random-string-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# ── CORS ───────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Rate Limiting ──────────────────────────────────────────────────────────
RATE_LIMIT_RPM=1000          # Requests per minute per user
AGENT_RATE_LIMIT_RPM=60      # Agent API calls per minute

# ── Governance ─────────────────────────────────────────────────────────────
MIN_TEST_COVERAGE=85
REQUIRE_HUMAN_APPROVAL=true
AUDIT_RETENTION_DAYS=90
AUTO_ROLLBACK=true

# ── Notifications ──────────────────────────────────────────────────────────
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#approvals

EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.company.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=forge@company.com
EMAIL_PASSWORD=your-smtp-password

# ── Observability ──────────────────────────────────────────────────────────
PROMETHEUS_ENABLED=true
SENTRY_DSN=                  # Optional: https://xxx@sentry.io/yyy
OTEL_ENDPOINT=               # Optional: OpenTelemetry collector endpoint

# ── Cloud / Deployment ─────────────────────────────────────────────────────
TARGET_CLOUD=AWS             # AWS | GCP | Azure | On-Prem
AWS_REGION=us-east-1
# GCP_PROJECT_ID=your-project
# AZURE_SUBSCRIPTION_ID=your-sub
